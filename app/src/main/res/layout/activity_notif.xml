<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.activity_notifikasi">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:title=""
        app:popupTheme="@style/AppTheme.NoActionBar"
        android:weightSum="1">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tombol_kembali"
                    android:src="@android:drawable/ic_menu_revert"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    android:padding="10dp" />
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="?attr/actionBarSize"
                    android:src="@drawable/wikiwhite"
                    android:id="@+id/imageView" />

                <aksamedia.wikiloka.Gajelas.tv_ubuntu
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Notifikasi Email"
                    android:id="@+id/textView3"
                    android:gravity="center_vertical|center_horizontal"
                    android:textColor="#ffffff"
                    android:textStyle="bold" />

            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/toolbar"
            android:padding="20dp"
            android:layout_weight="1" >

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/scrollView3" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ya, saya ingin menerima newsletter"
                        android:id="@+id/checkBox2" />

                    <aksamedia.wikiloka.Gajelas.tv_ubuntu
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/checkBox2"
                        android:text="Setiap beberapa minggu kami mengirimkan newsletter ke semua pengguna, disitu kami akan menginformasikan mengenai perubahan layanan, produk baru dan kampanye promosi. Jika Anda ingin selalu update tentang apa yang terjadi dengan Fecto, silahkan berlangganan newsletter kami."
                        android:id="@+id/textView10"
                        android:layout_marginTop="20dp" />

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ya, saya ingin menerima pesan notifikasi melalui email"
                        android:layout_below="@+id/textView10"
                        android:id="@+id/checkBox3"
                        android:layout_marginTop="20dp" />
                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ya, saya ingin menerima informasi iklan baru melalui email"
                        android:layout_below="@+id/checkBox3"
                        android:id="@+id/checkBox4"
                        android:layout_marginTop="20dp" />
                </RelativeLayout>
            </ScrollView>

        </RelativeLayout>

        <aksamedia.wikiloka.Gajelas.tv_ubuntu
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="UBAH"
            android:id="@+id/textView9"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:padding="15dp"
            android:gravity="center_horizontal"
            android:background="?attr/colorPrimary"
            android:textColor="#ffffff" />
    </LinearLayout>

</RelativeLayout>
