<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/llChat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="14">
        <ImageView
            android:id="@+id/imgYou"
            android:layout_width="match_parent"
            android:layout_weight="6"
            android:layout_height="40dp"/>
        <TextView
            android:id="@+id/tvMessage"
            android:text="Huahahahahah asdhajsdh asdlhasdsa dkasdjashd sakjdhaskjdhsadjk sahdkjsahdjksah djskad hsajkdhsajkdh sakd hsajdjdhas kdhasjdksa hdjksa"
            android:layout_width="match_parent"
            android:layout_weight="2"
            android:background="@drawable/rounded_chat"
            android:padding="8dp"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/imgMe"
            android:layout_width="match_parent"
            android:layout_weight="6"
            android:layout_height="40dp"/>
    </LinearLayout>
</LinearLayout>