<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:weightSum="2"
    tools:context=".Activity.activity_detail">


    <LinearLayout
        android:id="@+id/LinearLayoutTop"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <TextView
            android:layout_width="2dp"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:id="@+id/id_iklan"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <android.support.v4.view.ViewPager
                android:id="@+id/view_pager"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#88676767"
                android:id="@+id/relativeLayout8"
                android:layout_above="@+id/relativeLayout7">

                <aksamedia.wikiloka.Gajelas.tv_euphemia
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="3 Gambar"
                    android:textColor="#ffffffff"
                    android:layout_alignParentRight="true"
                    android:id="@+id/tv_jmlgambar"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_toLeftOf="@+id/tv_jmlgambar"
                    android:layout_centerVertical="true"
                    android:background="#FFFFFFFF"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:background="#88676767"
                android:id="@+id/relativeLayout7">

                <aksamedia.wikiloka.Gajelas.tv_moserrat
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:id="@+id/tv_harga"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:paddingLeft="20dp"
                    android:textColor="#ffffff"
                    android:textSize="30dp"
                    android:text="Rp 35.000.000" />

                <aksamedia.wikiloka.Gajelas.tv_euphemia
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:id="@+id/tv_judul"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/tv_harga"
                    android:layout_alignParentEnd="true"
                    android:textColor="#ffffff"
                    android:paddingLeft="20dp"
                    android:maxLines="1"
                    android:text="Toyota Kijang"
                    android:layout_alignParentBottom="true" />
            </RelativeLayout>



        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayoutBottom"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_above="@+id/bottom_bar">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/layout_content">

                            <ScrollView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/scrollView">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" >

                                   <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:background="#ffffff"
                                        android:paddingTop="10dp"
                                        android:layout_below="@+id/relativeLayout6"
                                        android:paddingBottom="10dp"
                                        android:paddingLeft="5dp"
                                        android:paddingRight="5dp"
                                        android:layout_gravity="center_horizontal"
                                        android:id="@+id/relativeLayout3" >
                                        <View
                                            android:layout_width="match_parent"
                                            android:layout_height="1dp"
                                            android:background="#adadad"
                                            android:id="@+id/view"/>
                                        <aksamedia.wikiloka.Gajelas.tv_euphemia
                                            android:layout_below="@+id/view"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textSize="16dp"
                                            android:text="Kijang jantan short mesin siap luar pulau Minusnya hanya  plat R monggo di cek TKP belakang kantor kua kecamatan modo sambil ngopi, harga nego sampek deal."
                                            android:id="@+id/tv_deskripsi"
                                            android:layout_alignParentEnd="true"
                                            android:layout_alignParentTop="true"
                                            android:layout_alignParentStart="true" />
                                    </RelativeLayout>
                                </RelativeLayout>
                            </ScrollView>
                        </LinearLayout>

                    </RelativeLayout>
                </ScrollView>
            </RelativeLayout>

        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
