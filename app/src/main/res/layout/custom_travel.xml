<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        card_view:cardElevation="6sp"
        card_view:cardUseCompatPadding="true">

        <LinearLayout
            android:id="@+id/ly1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="6">

                <ImageView
                    android:id="@+id/detail_foto"
                    android:layout_width="match_parent"
                    android:layout_height="120dp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_weight="4"
                android:padding="8dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true">
                        <TextView
                            android:id="@+id/jenisIklan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Jenis"
                            android:textSize="10sp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#07B516"
                            android:layout_toRightOf="@id/jenisIklan"
                            android:textAlignment="textEnd"
                            android:layout_alignParentRight="true"
                            android:textSize="10sp"
                            android:text="22 September 2016" />
                    </RelativeLayout>
                    <ScrollView
                        android:id="@+id/scrollView5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/jenisIklan">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/detail_judul"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:lines="2"
                                android:maxLines="2"
                                android:text="Judul"
                                android:textSize="13sp"
                                android:textStyle="bold" />
                        </RelativeLayout>
                    </ScrollView>

                    <TextView
                        android:id="@+id/detail_harga"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:text="Rp 0"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="?attr/colorPrimary"
                        android:textSize="14dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageView6"
                            android:layout_width="12dp"
                            android:layout_height="17dp"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentStart="true"
                            android:scaleType="fitXY"
                            android:src="@drawable/ic_marker" />

                        <TextView
                            android:id="@+id/detail_desk"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_marginLeft="5dp"
                            android:layout_toEndOf="@+id/imageView6"
                            android:text="Lokasi : Jl Dr.Ir.Soekarno"
                            android:textSize="13dp" />
                    </LinearLayout>
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:background="@drawable/bg_button_visit"
                        android:minHeight="0dp"
                        android:minWidth="0dp"
                        android:padding="5dp"
                        android:layout_marginTop="5dp"
                        android:text="Visit Website >> "
                        android:textColor="@android:color/white"
                        android:textSize="10sp" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>