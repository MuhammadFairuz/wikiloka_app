<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/tools"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:id="@+id/cv"
        card_view:cardElevation="6sp"
        card_view:cardUseCompatPadding="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp">
        <LinearLayout
            android:id="@+id/ly1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:weightSum="10"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_weight="6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:id="@+id/detail_foto"
                    android:scaleType="centerCrop"
                    />
                <CheckBox
                    android:id="@+id/cekbox_beli"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_weight="4"
                android:layout_height="120dp"
                android:padding="8dp">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/scrollView5">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/detail_judul"
                            android:maxLines="2"
                            android:textSize="13dp"
                            android:text="sffdfdsfdsfsdfsdfsdfdsfdsfsdfsdfsdfsdfsdfsdfsdfdsfdsfsdfsdfsdfsdf" />
                    </RelativeLayout>
                </ScrollView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/detail_tanggal"
                    android:textSize="13dp"
                    android:text="26-Apr-2016 12:00"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:id="@+id/detail_harga"
                    android:textSize="17dp"
                    android:layout_marginTop="16dp"
                    android:text="Rp 100.000"
                    android:textColor="?attr/colorPrimary"
                    android:layout_below="@+id/scrollView5"
                    android:layout_alignParentStart="true" />
                <TextView
                    android:layout_width="3dp"
                    android:layout_height="3dp"
                    android:visibility="invisible"
                    android:id="@+id/detail_seo"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btn_laku"
                    android:layout_marginLeft="5dp"
                    android:textSize="10dp"
                    android:maxLines="1"
                    android:minHeight="0dp"
                    android:minWidth="0dp"
                    android:ellipsize="end"
                    android:background="#66bb6a"
                    android:textColor="#fff"
                    android:text="PILIH IKLAN"
                    android:padding="4dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
