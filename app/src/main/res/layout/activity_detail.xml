<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".activity_detail_tips">

    <LinearLayout
        android:id="@+id/LinearLayoutTop"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="2dp"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                android:id="@+id/id_iklan"/>
            <android.support.v4.view.ViewPager
                android:id="@+id/view_pager"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/relativeLayout8"
                android:layout_above="@+id/relativeLayout7"
                >

                <me.relex.circleindicator.CircleIndicator
                    android:id="@+id/indicator"
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:layout_alignBottom="@+id/slider"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:background="#88676767" />
                <View
                    android:layout_below="@+id/indicator"
                    android:layout_marginLeft="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"
                    android:background="#ffffff"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:background="#88676767"
                android:id="@+id/relativeLayout7">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:id="@+id/tv_harga"
                    android:gravity="right"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:paddingRight="16dp"
                    android:textColor="#ffffff"
                    android:textSize="30dp"/>
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayoutBottom"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#bfbfbf">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_above="@+id/bottom_bar">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/layout_content">

                            <ScrollView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/scrollView">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" >

                                    <RelativeLayout
                                        android:layout_below="@+id/relativeLayout2"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:background="#ffffff"
                                        android:paddingTop="4dp"
                                        android:paddingBottom="4dp"
                                        android:paddingLeft="8dp"
                                        android:paddingRight="8dp"
                                        android:id="@+id/relativeLayout" >
                                        <RelativeLayout
                                            android:id="@+id/ggwp2"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:background="@drawable/bg_icon"
                                            android:padding="3dp">
                                            <ImageView
                                                android:layout_centerInParent="true"
                                                android:layout_width="17dp"
                                                android:layout_height="17dp"
                                                android:src="@drawable/ic_provinsi"/>
                                        </RelativeLayout>
                                        <LinearLayout
                                            android:layout_centerVertical="true"
                                            android:layout_marginLeft="6dp"
                                            android:layout_marginStart="6dp"
                                            android:layout_toRightOf="@+id/ggwp2"
                                            android:layout_toEndOf="@+id/ggwp2"
                                            android:weightSum="1"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content">
                                            <TextView
                                                android:textColor="#424242"
                                                android:layout_weight="0.3"
                                                android:layout_width="0dp"
                                                android:layout_height="wrap_content"
                                                android:textSize="16dp"
                                                android:text="Provinsi"
                                                android:id="@+id/textView12" />
                                            <TextView
                                                android:layout_weight="0.7"
                                                android:layout_width="0dp"
                                                android:layout_height="wrap_content"
                                                android:textSize="16dp"
                                                android:gravity="left"
                                                android:id="@+id/tv_provinsi_member"
                                                android:textColor="#616161" />
                                        </LinearLayout>

                                    </RelativeLayout>
                                    <RelativeLayout
                                        android:layout_below="@+id/relativeLayout4"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:background="#ffffff"
                                        android:paddingTop="6dp"
                                        android:paddingBottom="6dp"
                                        android:paddingLeft="10dp"
                                        android:paddingRight="10dp"
                                        android:id="@+id/relativeLayout11" >
                                        <LinearLayout
                                            android:weightSum="1"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content">

                                            <TextView
                                                android:textColor="#424242"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:textSize="21dp"
                                                android:id="@+id/tv_judul"
                                                android:gravity="left" />
                                        </LinearLayout>
                                    </RelativeLayout>
                                    <RelativeLayout
                                        android:layout_below="@+id/relativeLayout11"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:background="#ffffff"
                                        android:paddingBottom="4dp"
                                        android:paddingLeft="8dp"
                                        android:paddingTop="4dp"
                                        android:paddingRight="8dp"
                                        android:id="@+id/relativeLayout2" >
                                        <RelativeLayout
                                            android:id="@+id/ggwp1"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:background="@drawable/bg_icon"
                                            android:padding="3dp">
                                            <ImageView
                                                android:layout_centerInParent="true"
                                                android:layout_width="17dp"
                                                android:layout_height="17dp"
                                                android:src="@drawable/ic_user"/>
                                        </RelativeLayout>
                                        <TextView
                                            android:id="@+id/tvOwner"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:visibility="gone"/>
                                        <LinearLayout
                                            android:layout_centerVertical="true"
                                            android:layout_marginLeft="6dp"
                                            android:layout_marginStart="6dp"

                                            android:layout_toRightOf="@+id/ggwp1"
                                            android:layout_toEndOf="@+id/ggwp1"
                                            android:weightSum="1"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content">

                                            <TextView
                                                android:textColor="#424242"
                                                android:layout_weight="0.3"
                                                android:layout_width="0dp"
                                                android:layout_height="wrap_content"
                                                android:textSize="16dp"
                                                android:text="Nama"
                                                android:id="@+id/textView14" />
                                            <TextView
                                                android:layout_weight="0.7"
                                                android:layout_width="0dp"
                                                android:layout_height="wrap_content"
                                                android:textSize="16dp"
                                                android:id="@+id/tv_nama"
                                                android:gravity="left"
                                                android:textColor="#616161" />
                                        </LinearLayout>
                                    </RelativeLayout>

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:background="#ffffff"
                                        android:paddingTop="10dp"
                                        android:layout_below="@+id/relativeLayout6"
                                        android:paddingBottom="10dp"
                                        android:paddingLeft="5dp"
                                        android:paddingRight="5dp"
                                        android:layout_gravity="center_horizontal"
                                        android:id="@+id/relativeLayout3" >
                                        <View
                                            android:layout_width="match_parent"
                                            android:layout_height="0.2dp"
                                            android:background="#adadad"
                                            android:id="@+id/view"/>
                                        <TextView
                                            android:layout_below="@+id/view"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textSize="16dp"
                                            android:id="@+id/tv_deskripsi"
                                            android:layout_alignParentEnd="true"
                                            android:layout_alignParentRight="true"
                                            android:layout_alignParentTop="true"
                                            android:layout_alignParentStart="true"
                                            android:layout_alignParentLeft="true"/>
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_below="@+id/tv_deskripsi"
                                            android:text="Laporkan"
                                            android:id="@+id/tv_laporkan"
                                            android:layout_alignParentRight="true"
                                            android:layout_alignParentEnd="true"
                                            android:layout_marginTop="16dp"
                                            android:textStyle="bold"
                                            android:textSize="17dp"
                                            android:textColor="#ff1744"/>
                                        <RelativeLayout
                                            android:layout_below="@+id/tv_deskripsi"
                                            android:id="@+id/like_layout"
                                            android:layout_alignParentStart="true"
                                            android:layout_alignParentLeft="true"
                                            android:layout_marginTop="16dp"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content">
                                            <ImageView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:id="@+id/img_like"
                                                android:src="@drawable/like"/>
                                            <TextView
                                                android:id="@+id/txt_like"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginLeft="6dp"
                                                android:layout_marginStart="6dp"
                                                android:layout_toRightOf="@+id/img_like"
                                                android:layout_centerVertical="true"
                                                android:textColor="#536dfe"
                                                android:text="0"/>
                                        </RelativeLayout>
                                        <RelativeLayout
                                            android:layout_below="@+id/tv_deskripsi"
                                            android:id="@+id/unlike_layout"
                                            android:layout_marginTop="16dp"
                                            android:layout_marginLeft="8dp"
                                            android:layout_marginStart="8dp"
                                            android:layout_toRightOf="@+id/like_layout"

                                            android:layout_toEndOf="@+id/like_layout"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content">
                                            <ImageView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:id="@+id/img_unlike"
                                                android:src="@drawable/unlike"/>
                                            <TextView
                                                android:id="@+id/txt_unlike"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginLeft="6dp"
                                                android:layout_marginStart="6dp"
                                                android:layout_toRightOf="@+id/img_unlike"
                                                android:layout_centerVertical="true"
                                                android:textColor="#536dfe"
                                                android:text="0"/>
                                        </RelativeLayout>
                                    </RelativeLayout>

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="10dp"
                                        android:background="#ffffff"
                                        android:paddingTop="10dp"
                                        android:paddingBottom="10dp"
                                        android:paddingLeft="5dp"
                                        android:paddingRight="5dp"
                                        android:id="@+id/relativeLayout4" >
                                        <RelativeLayout
                                            android:id="@+id/ggwp"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:background="@drawable/bg_icon"
                                            android:padding="3dp">
                                            <ImageView
                                                android:layout_centerInParent="true"
                                                android:layout_width="24dp"
                                                android:layout_height="24dp"
                                                android:src="@drawable/location"/>
                                        </RelativeLayout>

                                        <TextView
                                            android:layout_centerVertical="true"
                                            android:layout_toRightOf="@+id/ggwp"
                                            android:layout_marginLeft="6dp"
                                            android:layout_marginStart="6dp"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textSize="17dp"
                                            android:text="Lokasi"
                                            android:id="@+id/textView17" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textSize="17dp"
                                            android:id="@+id/tv_kota"
                                            android:layout_centerVertical="true"
                                            android:layout_alignParentRight="true" />
                                    </RelativeLayout>

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:background="#ffffff"
                                        android:paddingTop="4dp"
                                        android:layout_below="@+id/relativeLayout5"
                                        android:paddingBottom="4dp"
                                        android:paddingLeft="8dp"
                                        android:paddingRight="8dp"
                                        android:layout_gravity="center_horizontal"
                                        android:id="@+id/relativeLayout6" >
                                        <RelativeLayout
                                            android:id="@+id/ggwp4"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:background="@drawable/bg_icon"
                                            android:padding="3dp">
                                            <ImageView
                                                android:layout_centerInParent="true"
                                                android:layout_width="17dp"
                                                android:layout_height="17dp"
                                                android:src="@drawable/ic_view"/>
                                        </RelativeLayout>
                                        <LinearLayout
                                            android:layout_marginLeft="6dp"
                                            android:layout_marginStart="6dp"
                                            android:layout_centerVertical="true"
                                            android:layout_toRightOf="@+id/ggwp4"
                                            android:layout_toEndOf="@+id/ggwp4"
                                            android:weightSum="1"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content">
                                            <TextView
                                                android:textColor="#424242"
                                                android:layout_weight="0.3"
                                                android:layout_width="0dp"
                                                android:layout_height="wrap_content"
                                                android:textSize="16dp"
                                                android:text="Dilihat"
                                                android:id="@+id/textView20" />

                                            <TextView
                                                android:layout_weight="0.7"
                                                android:layout_width="0dp"
                                                android:layout_height="wrap_content"
                                                android:textSize="16dp"
                                                android:text="0 Lihat"
                                                android:id="@+id/tv_lihat"
                                                android:textColor="#616161" />
                                        </LinearLayout>

                                    </RelativeLayout>

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:background="#ffffff"
                                        android:paddingTop="4dp"
                                        android:layout_below="@+id/relativeLayout"
                                        android:paddingBottom="4dp"
                                        android:paddingLeft="8dp"
                                        android:paddingRight="8dp"
                                        android:layout_gravity="center_horizontal"
                                        android:id="@+id/relativeLayout5" >
                                        <RelativeLayout
                                            android:id="@+id/ggwp3"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:background="@drawable/bg_icon"
                                            android:padding="3dp">
                                            <ImageView
                                                android:layout_centerInParent="true"
                                                android:layout_width="17dp"
                                                android:layout_height="17dp"
                                                android:src="@drawable/ic_kota"/>
                                        </RelativeLayout>
                                        <LinearLayout
                                            android:layout_marginLeft="6dp"
                                            android:layout_marginStart="6dp"
                                            android:layout_centerVertical="true"
                                            android:layout_toRightOf="@+id/ggwp3"
                                            android:layout_toEndOf="@+id/ggwp3"
                                            android:weightSum="1"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content">

                                            <TextView
                                                android:textColor="#424242"
                                                android:layout_weight="0.3"
                                                android:layout_width="0dp"
                                                android:layout_height="wrap_content"
                                                android:textSize="16dp"
                                                android:text="Kota"
                                                android:id="@+id/textView19" />

                                            <TextView
                                                android:layout_weight="0.7"
                                                android:layout_width="0dp"
                                                android:layout_height="wrap_content"
                                                android:textSize="16dp"
                                                android:id="@+id/tv_kota_member"
                                                android:textColor="#616161" />
                                        </LinearLayout>

                                    </RelativeLayout>
                                </RelativeLayout>
                            </ScrollView>
                        </LinearLayout>

                    </RelativeLayout>
                </ScrollView>
                <com.ashokvarma.bottomnavigation.BottomNavigationBar
                    android:layout_alignParentBottom="true"
                    android:id="@+id/bottom_bar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>

        </RelativeLayout>
    </LinearLayout>

</LinearLayout>