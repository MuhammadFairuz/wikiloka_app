<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.activity_iklan">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/Theme.AppCompat.Light.DarkActionBar"
        app:theme="@style/Toolbar"
        android:weightSum="1">

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/toolbar"
            android:padding="15dp"
            android:layout_weight="1" >

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/scrollView4" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:id="@+id/linearLayout9"
                        android:layout_below="@+id/textView11"
                        android:layout_alignParentStart="true">

                        <HorizontalScrollView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" >

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical" >

                                <ImageView
                                    android:layout_width="100dp"
                                    android:layout_height="100dp"
                                    android:src="@android:drawable/ic_menu_camera"
                                    android:scaleType="fitXY"
                                    android:id="@+id/img_ambilgambar"
                                    android:layout_marginLeft="10dp" />

                                <ImageView
                                    android:layout_width="100dp"
                                    android:layout_height="100dp"
                                    android:id="@+id/img_cam1"
                                    android:scaleType="fitXY"
                                    android:layout_marginLeft="10dp" />

                                <ImageView
                                    android:layout_width="100dp"
                                    android:layout_height="100dp"
                                    android:id="@+id/img_cam2"
                                    android:scaleType="fitXY"
                                    android:layout_marginLeft="10dp" />

                                <ImageView
                                    android:layout_width="100dp"
                                    android:layout_height="100dp"
                                    android:scaleType="fitXY"
                                    android:id="@+id/img_cam3"
                                    android:layout_marginLeft="10dp" />

                                <ImageView
                                    android:layout_width="100dp"
                                    android:layout_height="100dp"
                                    android:id="@+id/img_cam4"
                                    android:scaleType="fitXY"
                                    android:layout_marginLeft="10dp" />

                                <ImageView
                                    android:layout_width="100dp"
                                    android:layout_height="100dp"
                                    android:scaleType="fitXY"
                                    android:id="@+id/img_cam5"
                                    android:layout_marginLeft="10dp" />

                            </LinearLayout>
                        </HorizontalScrollView>
                    </LinearLayout>

                    <aksamedia.wikiloka.Gajelas.tv_ubuntu
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"
                        android:text="Ambil foto atau pilih foto(max. 5)"
                        android:id="@+id/textView11" />
                    <EditText
                        android:layout_width="1dp"
                        android:layout_height="1dp"
                        android:visibility="invisible"
                        android:id="@+id/id_jenis"/>
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:layout_below="@+id/linearLayout9"
                        android:hint="Jenis Barang"
                        android:layout_marginTop="15dp"
                        android:id="@+id/editText23" />
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:layout_below="@+id/editText23"
                        android:hint="Kategori Iklan"
                        android:layout_marginTop="15dp"
                        android:id="@+id/editText16" />
                    <RelativeLayout
                        android:id="@+id/form_kategori"
                        android:layout_below="@+id/editText16"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </RelativeLayout>
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:layout_below="@+id/form_kategori"
                        android:hint="Kota"
                        android:layout_marginTop="15dp"
                        android:id="@+id/editText20" />
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:layout_below="@+id/editText16"
                        android:visibility="invisible"
                        android:hint="Kota"
                        android:layout_marginTop="15dp"
                        android:id="@+id/editText21" />
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:layout_below="@+id/editText16"
                        android:visibility="invisible"
                        android:hint="Kota"
                        android:layout_marginTop="15dp"
                        android:id="@+id/editText22" />
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/editText20"
                        android:hint="Judul Iklan (min. 15 karakter)"
                        android:layout_marginTop="15dp"
                        android:id="@+id/editText9" />
                    <!--<EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Kategori"
                        android:id="@+id/editText10"
                        android:layout_below="@+id/editText9"
                        android:layout_marginTop="15dp" />-->
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Deskripsi (min. 20 karakter)"
                        android:id="@+id/editText11"
                        android:layout_below="@+id/editText9"
                        android:layout_marginTop="15dp" />
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Harga Iklan"
                        android:id="@+id/editText12"
                        android:layout_below="@+id/editText11"
                        android:layout_marginTop="15dp" />
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Web Iklan"
                        android:id="@+id/editText13"
                        android:layout_below="@+id/editText12"
                        android:layout_marginTop="15dp" />
                    <!--<EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Email"
                        android:id="@+id/editText14"
                        android:layout_below="@+id/editText13"
                        android:layout_marginTop="15dp" />
                    <CheckBox
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/checkbox5"
                        android:text="Saya tidak ingin dihubungi lewat email"
                        android:layout_below="@+id/editText14"/>!-->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Nama Member"
                        android:id="@+id/editText15"
                        android:layout_below="@+id/editText13"
                        android:layout_marginTop="15dp" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Email"
                        android:id="@+id/editText26"
                        android:layout_below="@+id/editText15"
                        android:layout_marginTop="15dp" />
                    <CheckBox
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/checkbox1"
                        android:text="Jangan tampilkan email"
                        android:layout_below="@+id/editText26"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Telepon Member"
                        android:id="@+id/editText17"
                        android:layout_below="@+id/checkbox1"
                        android:layout_marginTop="15dp" />
                    <CheckBox
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/checkbox2"
                        android:text="WhatsApp tersedia."
                        android:layout_below="@+id/editText17"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Telepon Member 2"
                        android:id="@+id/editText24"
                        android:layout_below="@+id/checkbox2"
                        android:layout_marginTop="15dp" />
                    <CheckBox
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/checkbox3"
                        android:text="WhatsApp tersedia."
                        android:layout_below="@+id/editText24"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Line ID"
                        android:id="@+id/editText25"
                        android:layout_below="@+id/checkbox3"
                        android:layout_marginTop="15dp" />
                    <CheckBox
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/checkbox4"
                        android:text="Sembunyikan Line ID."
                        android:layout_below="@+id/editText25"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="BBM Member"
                        android:id="@+id/editText18"
                        android:layout_below="@+id/checkbox4"
                        android:layout_marginTop="15dp" />
                    <CheckBox
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/checkbox5"
                        android:text="Sembunyikan PIN BBM"
                        android:layout_below="@+id/editText18"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Username"
                        android:id="@+id/editText19"
                        android:editable="false"
                        android:layout_below="@+id/checkbox5"
                        android:layout_marginTop="15dp" />

                    <!--<CheckBox
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/checkbox6"
                        android:text="Saya bisa di hubungi lewat WhatsApp"
                        android:layout_below="@+id/editText16"/>-->
                </RelativeLayout>
            </ScrollView>


        </RelativeLayout>

        <aksamedia.wikiloka.Gajelas.tv_ubuntu
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="SIMPAN"
            android:id="@+id/textView21"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:padding="15dp"
            android:gravity="center_horizontal"
            android:background="?attr/colorPrimary"
            android:textColor="#ffffff" />
    </LinearLayout>

</RelativeLayout>
